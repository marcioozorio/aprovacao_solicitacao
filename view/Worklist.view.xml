<mvc:View
    controllerName="aprovacaosolicitacao.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        
        showFooter="true">

        

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="table"
                mode="MultiSelect"
                width="auto"
                items="{
                    path: '/AdminSolicAlteracaoPrecoSet',
                    sorter: {
                        path: 'Matnr',
                        descending: false
                    },
                    parameters :{
                        expand: 'toMaterial,toPreco'
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                >

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Id"/>
                    </Column>

                    <Column hAlign="Begin">
                        <Text text="Material"/>
                    </Column>
                    
                    <Column hAlign="End">
                        <Text text="Preco Atual"/>
                    </Column>
                    
                    <Column hAlign="End">
                        <Text text="PreÃ§o Novo"/>
                    </Column>

                    <Column>
                        <Text text="Data Solic."/>
                    </Column>

                    <Column>
                        <Text text="Hora Solic."/>
                    </Column>

                    <!--<Column hAlign="End">
                        <Text text=""/>
                    </Column>

                    <Column hAlign="End">
                        <Text text=""/>
                    </Column>
                    -->
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Id}"
                                />
                            
                            <ObjectIdentifier
                                title="{Matnr}"
                                text="{toMaterial/MAKTX}"/>
                            
                            <Text text="{toPreco/Preco}" />

                            <Text text="{PrecoNovo}" />

                            <Text text="{
                                path : 'Dtsolic',
                                type : 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style : 'short'
                                }  
                            }" 
                            />
                            <Text text="{
                                path : 'Hrsolic',
                                type : 'sap.ui.model.odata.type.Time' 
                            }" />

                            <!-- <Button text="Aprovar" type="Accept"></Button>
                            <Button text="Reprovar" type="Reject"></Button> -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

        <semantic:footerCustomActions>
            <Button  text="Reprovar" type="Reject" press="onExecutar_V1('R')"></Button>
            <Button  text="Aprovar" type="Accept" press="onExecutar_V1('A')"></Button>
        </semantic:footerCustomActions>

    </semantic:SemanticPage>

</mvc:View>